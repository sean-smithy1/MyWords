<% provide(:title, 'New List') %>
<h1>Add List</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for([lists.words.build]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :listname, 'List Name' %>
      <%= f.text_field :listname %>

      <%= f.submit "Create List", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>