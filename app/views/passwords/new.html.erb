<% provide(:title, 'Change Pass') %>
<h1>Change Password</h1>

<%= form_for @password_form, url: passwords_path, method: :post do |f| %>

<%= render partial: 'shared/validation', object: f.object %>

  <div class="field">
    <%= f.label :original_password %><br />
    <%= f.password_field :original_password %>
  </div>
  <div class="field">
    <%= f.label :new_password %><br />
    <%= f.password_field :new_password %>
  </div>
  <div class="field">
    <%= f.label :new_password_confirmation %><br />
    <%= f.password_field :new_password_confirmation %>
  </div>
  <div class="actions"><%= f.submit "Change Password" %></div>
<% end %>
