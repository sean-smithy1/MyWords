<% provide(:title, 'Sign up') %>

<h1>Sign up</h1>

<%= form_for(@user) do |user_details| %>
      <%= render partial: 'shared/validation', object: user_details.object %>

 <div class = "form-group">
      <%= user_details.label :name %>
      <%= user_details.text_field :name, class: "form-control" %>
</div>

<div class = "form-group">
      <%= user_details.label :email %>
      <%= user_details.text_field :email, class: "form-control"%>
</div>

<div class = "form-group">
      <%= user_details.label :password %>
      <%= user_details.password_field :password, class: "form-control" %>
</div>

<div class = "form-group">
      <%= user_details.label :password_confirmation, "Confirmation" %>
      <%= user_details.password_field :password_confirmation, class: "form-control" %>
</div>

      <%= user_details.submit "Create my account", class: "btn btn-small btn-primary" %>
<% end %>

</form>
