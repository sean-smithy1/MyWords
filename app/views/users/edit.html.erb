<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<form role = "form">
  <%= form_for @user do |user_details| %>
    <%= render 'shared/error_messages', object: user_details.object %>

  <div class = "form-group">
    <%= user_details.label :name%>:
    <%= user_details.text_field :name, class: "form-control", placeholder: "first last" %>
  </div>
  <div class = "form-group">
    <%= user_details.label :email%>:
    <%= user_details.email_field :email, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= user_details.label :password%>:
    <%= user_details.password_field :password, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= user_details.label :password_confirmation %>
    <%= user_details.password_field :password_confirmation, class: "form-control" %>
  </div>
    <%= user_details.submit "Save changes", class: "btn btn-small btn-primary" %>
  <% end %>
</div>
</form>

